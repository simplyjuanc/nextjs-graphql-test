generator client {
    provider = "prisma-client-js"
}

generator nexusPrisma {
    provider = "nexus-prisma"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Task {
    id          Int      @id @default(autoincrement())
    title       String
    description String?
    status      String
    createdAt   DateTime @default(now())
}
